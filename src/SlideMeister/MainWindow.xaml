<Window xmlns:Control="clr-namespace:SlideMeister.Control"  x:Class="SlideMeister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlideMeister"
        mc:Ignorable="d"
        Title="SlideMeister" Height="700" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="70*"></RowDefinition>
            <RowDefinition Height="30*"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.Column="0">
            <MenuItem Header="_File">
                <MenuItem Header="Open..." Click="FileOpen_Click"></MenuItem>
                <Separator />
                <MenuItem Header="Close" Click="Close_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Image">
                <MenuItem Header="Save Image..." Click="SaveImage_OnClick"></MenuItem>
                <MenuItem Header="Save all Sequences..." Click="SaveSequences_OnClick">
                </MenuItem>
            </MenuItem>
        </Menu>
        <Border Grid.Row="1" Grid.Column="0" BorderThickness="1" Padding="5" BorderBrush="Black">
            <Control:SlideControl x:Name="SlideCanvas"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="0" BorderThickness="1" Padding="5" BorderBrush="Black"
                Background="Orange">
            <TabControl>
                <TabItem>
                    <TabItem.Header>States</TabItem.Header>
                    <ScrollViewer VerticalAlignment="Top" Margin="10">
                        <Grid x:Name="StateButtons">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
                <TabItem>
                    <TabItem.Header>StatesTable</TabItem.Header>
                    <ScrollViewer VerticalAlignment="Top" Margin="10">
                        <ListView x:Name="StateButtonsView">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"></GridViewColumn>
                                    <GridViewColumn Header="State" DisplayMemberBinding="{Binding State}"></GridViewColumn>
                                    <GridViewColumn Header="Next">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Command="{Binding NextState}">Next</Button>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ScrollViewer>
                </TabItem>
                <TabItem>
                    <TabItem.Header>Transitions</TabItem.Header>
                    <ScrollViewer>
                        <StackPanel Orientation="Vertical" x:Name="TransitionButtons"></StackPanel>
                    </ScrollViewer>
                </TabItem>
                <TabItem>
                    <TabItem.Header>Sequences</TabItem.Header>
                    <ScrollViewer>
                        <Grid x:Name="SequenceButtons" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</Window>
