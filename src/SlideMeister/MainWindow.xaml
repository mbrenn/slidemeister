<Window xmlns:Control="clr-namespace:SlideMeister.Control"  x:Class="SlideMeister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlideMeister"
        mc:Ignorable="d"
        Title="SlideMeister" Height="700" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="70*"></RowDefinition>
            <RowDefinition Height="30*"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.Column="0">
            <MenuItem Header="_File">
                <MenuItem Header="Open..." Click="FileOpen_Click"></MenuItem>
                <Separator />
                <MenuItem Header="Close" Click="Close_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Image">
                <MenuItem Header="Save Image..." Click="SaveImage_OnClick"></MenuItem>
                <MenuItem Header="Save all Sequences..." Click="SaveSequences_OnClick">
                </MenuItem>
            </MenuItem>
        </Menu>
        <Control:SlideControl Grid.Row="1" Grid.Column="0" x:Name="SlideCanvas"/>
        <TabControl Grid.Row="2" Grid.Column="0" >
            <TabItem>
                <TabItem.Header>States</TabItem.Header>
                <ScrollViewer>
                    <StackPanel Orientation="Vertical" x:Name="StateButtons"></StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>Transitions</TabItem.Header>
                <ScrollViewer>
                    <StackPanel Orientation="Vertical" x:Name="TransitionButtons"></StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>Sequences</TabItem.Header>
                <ScrollViewer>
                    <Grid x:Name="SequenceButtons" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
